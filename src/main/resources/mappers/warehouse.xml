<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="blog.devjay.logistics.repository.warehouse.WarehouseMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO warehouses (name, location)
        VALUES (#{name}, #{location})
    </insert>

    <select id="findById" resultType="Warehouse">
        SELECT *
        FROM warehouses
        WHERE id = #{id}
    </select>

    <select id="findByName" resultType="Warehouse">
        SELECT *
        FROM warehouses
        <where>
            name = #{name}
        </where>
    </select>

    <select id="findAll" resultType="Warehouse">
        SELECT *
        FROM warehouses
        <!--                <where>-->
        <!--                    <if test="username != null and username != ''">-->
        <!--                        AND LOWER(username) like concat('%', #{username}, '%')-->
        <!--                    </if>-->
        <!--                    <if test="status != null">-->
        <!--                        AND status = #{status}-->
        <!--                    </if>-->
        <!--                    <if test="role != null">-->
        <!--                        AND role = #{role}-->
        <!--                    </if>-->
        <!--                </where>-->
        <!--        LIMIT #{size} OFFSET #{size} * (#{page} - 1)-->
    </select>

    <select id="findAllCount" resultType="int">
        SELECT COUNT(*) FROM warehouses
        <where>
            <if test="username != null and username != ''">
                AND LOWER(username) like concat('%', #{username}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="role != null">
                AND role = #{role}
            </if>
        </where>
    </select>

    <update id="update">
        UPDATE warehouses
        <set>
            <if test="role != null">role = #{role},</if>
            <if test="status != null">status = #{status},</if>
            updated_at = CURRENT_TIMESTAMP
        </set>
        WHERE id = #{id}
    </update>
</mapper>